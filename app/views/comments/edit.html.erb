<p class="edit-comment">edit comment:</p>

<% if @comment.errors.any? %>
  <ul>
    <% @comment.errors.full_messages.each do |message| %>
      <li class="error-message">
        - <%= message %>
      </li>
    <% end %>
  </ul><br>
<% end %>

<%= form_for ([@show, @episode, @comment]) do |f| %>
  <%= f.hidden_field :episode_id, value: @episode.id %>

  <%= f.text_area :content, rows: "5", cols: "50" %><br>
  <div><%= f.submit %></div>
<% end %>