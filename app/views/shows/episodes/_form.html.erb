<%= form_for [@show, @episode] do |f| %>

	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %><br>
	</div>

	<div class="field">
		<%= f.label :description %>
		<%= f.text_area :description %><br>
	</div>

	<div class="field">
		<%= f.label :air_date %>
		<%= f.date_field :air_date %><br>
	</div>

	<div class="field">
		<%= f.label :avatar %>
		<%= f.file_field :avatar %><br>
	</div>
	
	<%= f.submit %>
<% end %>